<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app.name"), "/", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), "/" %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.user"), users_path %></li>
          <li class="dropdown">
            <div class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.account" %><b class="caret"></b>
            </div>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.profile"), current_user %></li>
              <li><%= link_to t("users.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("users.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
