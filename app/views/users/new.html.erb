<% provide :title, t("users.signup.title") %>
<h1><%= t "users.signup.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t(".name_label") %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".password_label") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t(".confirm_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t(".signup_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
